<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <AllowUnsafeBlocks>False</AllowUnsafeBlocks>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Title>$(AssemblyName)</Title>
    <Authors>William Santos</Authors>
    <Description>A simple F#'s monads port for C#</Description>
    <PackageProjectUrl>https://www.nuget.org/packages/moonad</PackageProjectUrl>
    <RepositoryUrl>https://github.com/2hit-io/moonad</RepositoryUrl>
    <Copyright>2023 Moonad.NET</Copyright>
    <PackageIcon>Resources\icon.png</PackageIcon>
    <PackageLicenseFile>Resources\LICENSE</PackageLicenseFile>
    <PackageTags>monad;monads;functional;functional-programming;result;result-type;choice;option;charp-library</PackageTags>
    <PackageReadmeFile>Resources\README.md</PackageReadmeFile>
    <PackageVersion>5.0.0</PackageVersion>
    <Company>Moonad.NET</Company>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\icon.png">
      <Pack>True</Pack>
      <PackagePath>Resources</PackagePath>
      <Visible>False</Visible>
    </None>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>Resources</PackagePath>
      <Visible>False</Visible>
    </None>
    <None Include="..\LICENSE">
      <Pack>True</Pack>
      <PackagePath>Resources</PackagePath>
      <Visible>False</Visible>
    </None>
  </ItemGroup>

</Project>
